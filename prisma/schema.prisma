// schema.prisma — CodeQuest Platform
// Database: PostgreSQL (Neon Serverless)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ── ACCOUNTS ──────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  passwordHash  String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  children      Child[]
  verifyTokens  VerificationToken[]
  subscription  Subscription?

  @@index([email])
}

model Child {
  id             String    @id @default(cuid())
  parentId       String
  displayName    String
  dateOfBirth    DateTime
  avatarId       String    @default("avatar_01")
  pinHash        String
  currentPhase   PhaseSlug @default(SPARK_ZONE)
  xp             Int       @default(0)
  level          Int       @default(1)
  streakDays     Int       @default(0)
  lastActiveAt   DateTime?
  consentGivenAt DateTime  @default(now())
  pinAttempts    Int       @default(0)
  pinLockedUntil DateTime?
  guildId        String?

  parent          User      @relation(fields: [parentId], references: [id], onDelete: Cascade)
  guild           Guild?    @relation(fields: [guildId], references: [id])
  progress        Progress[]
  achievements    ChildAchievement[]
  projects        Project[]
  skillCards      ChildSkillCard[]
  placementResult PlacementResult?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([parentId])
}

model PlacementResult {
  id               String    @id @default(cuid())
  childId          String    @unique
  recommendedPhase PhaseSlug
  score            Int
  answers          Json
  completedAt      DateTime  @default(now())

  child            Child     @relation(fields: [childId], references: [id], onDelete: Cascade)
}

// ── CURRICULUM ────────────────────────────────────────

model Phase {
  id      String   @id
  number  Int      @unique
  title   String
  kingdom String
  mentor  String
  ageMin  Int
  ageMax  Int
  colorHex String
  modules Module[]
}

model Module {
  id          String  @id @default(cuid())
  phaseId     String
  phase       Phase   @relation(fields: [phaseId], references: [id])
  order       Int
  title       String
  description String
  weeks       Int
  skills      String[]
  lessons     Lesson[]
}

model Lesson {
  id           String     @id @default(cuid())
  moduleId     String
  module       Module     @relation(fields: [moduleId], references: [id])
  order        Int
  title        String
  type         LessonType
  content      Json
  xpReward     Int        @default(50)
  gemReward    Int        @default(0)
  estimatedMin Int        @default(15)
  progress     Progress[]
}

// ── PROGRESS & XP ─────────────────────────────────────

model Progress {
  id          String         @id @default(cuid())
  childId     String
  child       Child          @relation(fields: [childId], references: [id])
  lessonId    String
  lesson      Lesson         @relation(fields: [lessonId], references: [id])
  status      ProgressStatus @default(NOT_STARTED)
  attempts    Int            @default(0)
  score       Int?
  xpEarned    Int            @default(0)
  completedAt DateTime?
  code        String?
  startedAt   DateTime       @default(now())

  @@unique([childId, lessonId])
}

model XPEvent {
  id        String      @id @default(cuid())
  childId   String
  type      XPEventType
  amount    Int
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([childId, createdAt])
}

// ── ACHIEVEMENTS & GAMIFICATION ───────────────────────

model Achievement {
  id          String             @id @default(cuid())
  key         String             @unique
  title       String
  description String
  iconUrl     String
  xpReward    Int
  gemReward   Int
  rarity      AchievementRarity
  children    ChildAchievement[]
}

model ChildAchievement {
  id            String       @id @default(cuid())
  childId       String
  child         Child        @relation(fields: [childId], references: [id])
  achievementId String
  achievement   Achievement  @relation(fields: [achievementId], references: [id])
  earnedAt      DateTime     @default(now())

  @@unique([childId, achievementId])
}

model SkillCard {
  id          String      @id @default(cuid())
  name        String
  description String
  rarity      CardRarity
  phase       Int
  skill       String
  artworkUrl  String
  isHolo      Boolean     @default(false)
  children    ChildSkillCard[]
}

model ChildSkillCard {
  id          String   @id @default(cuid())
  childId     String
  child       Child    @relation(fields: [childId], references: [id])
  skillCardId String
  skillCard   SkillCard @relation(fields: [skillCardId], references: [id])
  earnedAt    DateTime @default(now())

  @@unique([childId, skillCardId])
}

model Guild {
  id        String  @id @default(cuid())
  name      String  @unique
  emblem    String
  xpTotal   Int     @default(0)
  members   Child[]
  createdAt DateTime @default(now())
}

// ── PROJECTS ──────────────────────────────────────────

model Project {
  id          String       @id @default(cuid())
  childId     String
  child       Child        @relation(fields: [childId], references: [id])
  title       String
  description String?
  phase       Int
  language    CodeLanguage
  code        Json
  isPublished Boolean      @default(false)
  gallerySlug String?      @unique
  upvotes     Int          @default(0)
  embedUrl    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// ── SUBSCRIPTIONS ─────────────────────────────────────

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  user                 User               @relation(fields: [userId], references: [id])
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
}

model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  source    String   @default("landing")
  createdAt DateTime @default(now())

  @@index([createdAt])
}

// ── NEXTAUTH MODELS ───────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

// ── ENUMS ─────────────────────────────────────────────

enum UserRole {
  USER
  CHILD
  ADMIN
}

enum PhaseSlug {
  SPARK_ZONE
  BUILDERS_GUILD
  THE_FORGE
  DEVELOPERS_REALM
}

enum LessonType {
  VIDEO
  CODING
  QUIZ
  CHALLENGE
  PROJECT
  STORY
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  MASTERED
}

enum XPEventType {
  LESSON_COMPLETE
  STREAK_BONUS
  CHALLENGE_WIN
  BADGE_EARN
  DAILY_QUEST
}

enum AchievementRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}

enum CardRarity {
  COMMON
  UNCOMMON
  RARE
  HOLO
  LEGENDARY
}

enum CodeLanguage {
  SCRATCH
  PYTHON
  JAVASCRIPT
  HTML_CSS
  REACT
  SQL
}

enum SubscriptionPlan {
  FREE
  EXPLORER
  ADVENTURER
  CHAMPION
  FAMILY
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  TRIALING
}
